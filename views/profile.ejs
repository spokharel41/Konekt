<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Connect with <%= data.username || 'User' %></title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; text-align: center; background: #f9f9f9; }
    h1 { color: #333; }
    .icons a {
      margin: 0 10px;
      display: inline-block;
    }
    .icons img {
      width: 48px;
      height: 48px;
      vertical-align: middle;
    }
  </style>
</head>
<body>
  <h1>Connect with <%= data.username || 'User' %></h1>
  <div class="icons">
    <% if (data.facebook) { %>
      <a href="<%= data.facebook %>" target="_blank" rel="noopener">
        <img src="/icons/facebook.png" alt="Facebook" title="Facebook" />
      </a>
    <% } %>
    <% if (data.instagram) { %>
      <a href="<%= data.instagram %>" target="_blank" rel="noopener">
        <img src="/icons/instagram.png" alt="Instagram" title="Instagram" />
      </a>
    <% } %>
    <% if (data.twitter) { %>
      <a href="<%= data.twitter %>" target="_blank" rel="noopener">
        <img src="/icons/twitter.png" alt="Twitter" title="Twitter" />
      </a>
    <% } %>
    <% if (data.youtube) { %>
      <a href="<%= data.youtube %>" target="_blank" rel="noopener">
        <img src="/icons/youtube.png" alt="YouTube" title="YouTube" />
      </a>
    <% } %>
    <% if (data.tiktok) { %>
      <a href="<%= data.tiktok %>" target="_blank" rel="noopener">
        <img src="/icons/tiktok.png" alt="TikTok" title="TikTok" />
      </a>
    <% } %>
    <% if (data.snapchat) { %>
      <a href="<%= data.snapchat %>" target="_blank" rel="noopener">
        <img src="/icons/snapchat.png" alt="Snapchat" title="Snapchat" />
      </a>
    <% } %>
    <% if (data.threads) { %>
      <a href="<%= data.threads %>" target="_blank" rel="noopener">
        <img src="/icons/threads.png" alt="Threads" title="Threads" />
      </a>
    <% } %>
  </div>
</body>
</html>
