<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Create Your KoneKt Profile</title>
  <style>
    /* Reset some defaults */
    * {
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, #89f7fe 0%, #66a6ff 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 40px 20px;
      color: #2c3e50;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .container {
      max-width: 480px;
      width: 100%;
      background: #fff;
      padding: 35px 40px 40px 40px;
      border-radius: 16px;
      box-shadow:
        0 8px 24px rgba(0,0,0,0.12),
        0 4px 12px rgba(0,0,0,0.08);
      transition: transform 0.3s ease;
    }
    .container:hover {
      transform: translateY(-6px);
      box-shadow:
        0 14px 36px rgba(0,0,0,0.18),
        0 6px 18px rgba(0,0,0,0.12);
    }

    h1 {
      text-align: center;
      margin-bottom: 28px;
      color: #34495e;
      font-weight: 700;
      letter-spacing: 0.03em;
      text-shadow: 0 1px 2px rgba(0,0,0,0.1);
    }

    label {
      font-weight: 600;
      display: block;
      margin-bottom: 8px;
      color: #34495e;
      font-size: 0.95rem;
      user-select: none;
    }

    input[type="text"], input[type="url"] {
      width: 100%;
      padding: 14px 16px;
      font-size: 1rem;
      border: 2px solid #cbd5e1;
      border-radius: 12px;
      margin-bottom: 22px;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
      font-weight: 500;
      color: #34495e;
      background: #f9fafb;
      box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
    }
    input[type="text"]:focus, input[type="url"]:focus {
      border-color: #3b82f6;
      box-shadow: 0 0 8px #3b82f6aa;
      outline: none;
      background: #fff;
    }

    fieldset {
      border: none;
      margin-bottom: 30px;
      padding: 0;
    }
    legend {
      font-weight: 700;
      margin-bottom: 14px;
      font-size: 1.15rem;
      color: #2c3e50;
      letter-spacing: 0.02em;
      user-select: none;
    }

    .social-toggle {
      display: flex;
      flex-wrap: wrap;
      gap: 18px;
      justify-content: center;
      margin-bottom: 26px;
    }

    /* Hide real checkboxes */
    .social-toggle input[type="checkbox"] {
      display: none;
    }

    /* Label as toggle button with icons */
    .social-toggle label {
      cursor: pointer;
      user-select: none;
      width: 64px;
      height: 64px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      box-shadow: 0 6px 12px rgba(0,0,0,0.1);
      filter: grayscale(100%);
      opacity: 0.5;
      border: 2.5px solid transparent;
      background: #f8fafc;
      position: relative;
      overflow: hidden;
    }
    .social-toggle label img {
      width: 34px;
      height: 34px;
      object-fit: contain;
      transition: transform 0.3s ease;
    }

    /* Checked state */
    .social-toggle input[type="checkbox"]:checked + label {
      filter: none;
      opacity: 1;
      box-shadow: 0 10px 28px rgba(0,0,0,0.25);
      border-color: #3b82f6;
      background: #dbeafe;
    }
    .social-toggle input[type="checkbox"]:checked + label img {
      transform: scale(1.1);
    }

    /* Hover effect */
    .social-toggle label:hover {
      filter: none;
      opacity: 1;
      box-shadow: 0 10px 24px rgba(0,0,0,0.18);
      border-color: #3b82f6;
      background: #e0efff;
    }

    .social-field {
      margin-bottom: 24px;
      transition: max-height 0.35s ease, opacity 0.35s ease;
      overflow: hidden;
    }
    .social-field.hidden {
      max-height: 0;
      opacity: 0;
      pointer-events: none;
      margin-bottom: 0;
      padding: 0;
    }
    .social-field:not(.hidden) {
      max-height: 120px;
      opacity: 1;
      pointer-events: auto;
    }

    button {
      background: linear-gradient(90deg, #2563eb 0%, #3b82f6 100%);
      color: white;
      font-weight: 700;
      padding: 16px 0;
      width: 100%;
      border: none;
      border-radius: 14px;
      font-size: 1.15em;
      cursor: pointer;
      box-shadow: 0 6px 16px rgba(59, 130, 246, 0.45);
      transition: background 0.35s ease, box-shadow 0.35s ease;
      letter-spacing: 0.05em;
      user-select: none;
    }
    button:hover {
      background: linear-gradient(90deg, #1e40af 0%, #2563eb 100%);
      box-shadow: 0 10px 26px rgba(30, 64, 175, 0.6);
    }

    /* Responsive tweak */
    @media (max-width: 520px) {
      .container {
        padding: 30px 20px 30px 20px;
        margin: 10px;
      }
      .social-toggle label {
        width: 54px;
        height: 54px;
      }
      .social-toggle label img {
        width: 28px;
        height: 28px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Create Your Konekt Profile</h1>
    <form action="/create-profile" method="POST" autocomplete="off">
      <label for="username">Your Name:</label>
      <input type="text" id="username" name="username" required placeholder="Your full name" />

      <fieldset>
        <legend>Select social media to include:</legend>
        <div class="social-toggle">
          <input type="checkbox" id="facebook" name="platform" value="facebook" />
          <label for="facebook"><img src="https://cdn-icons-png.flaticon.com/512/733/733547.png" alt="Facebook" /></label>

          <input type="checkbox" id="instagram" name="platform" value="instagram" />
          <label for="instagram"><img src="https://cdn-icons-png.flaticon.com/512/2111/2111463.png" alt="Instagram" /></label>

          <input type="checkbox" id="twitter" name="platform" value="twitter" />
          <label for="twitter"><img src="https://cdn-icons-png.flaticon.com/512/733/733579.png" alt="Twitter" /></label>

          <input type="checkbox" id="youtube" name="platform" value="youtube" />
          <label for="youtube"><img src="https://cdn-icons-png.flaticon.com/512/1384/1384060.png" alt="YouTube" /></label>

          <input type="checkbox" id="tiktok" name="platform" value="tiktok" />
          <label for="tiktok"><img src="https://cdn-icons-png.flaticon.com/512/3046/3046123.png" alt="TikTok" /></label>

          <input type="checkbox" id="snapchat" name="platform" value="snapchat" />
            <label for="snapchat">
              <img src="https://cdn-icons-png.flaticon.com/512/185/185966.png" alt="Snapchat" />
            </label>

            <input type="checkbox" id="threads" name="platform" value="threads" />
            <label for="threads">
              <img src="https://cdn-icons-png.flaticon.com/512/12105/12105337.png" alt="Threads" title="Threads" />
            </label>
        </div>
      </fieldset>

      <div id="socialInputs">
        <div class="social-field hidden" data-platform="facebook">
          <label for="facebookUrl">Facebook URL:</label>
          <input type="url" id="facebookUrl" name="facebook" placeholder="https://facebook.com/yourprofile" />
        </div>

        <div class="social-field hidden" data-platform="instagram">
          <label for="instagramUrl">Instagram URL:</label>
          <input type="url" id="instagramUrl" name="instagram" placeholder="https://instagram.com/yourprofile" />
        </div>

        <div class="social-field hidden" data-platform="twitter">
          <label for="twitterUrl">Twitter URL:</label>
          <input type="url" id="twitterUrl" name="twitter" placeholder="https://twitter.com/yourprofile" />
        </div>

        <div class="social-field hidden" data-platform="youtube">
          <label for="youtubeUrl">YouTube URL:</label>
          <input type="url" id="youtubeUrl" name="youtube" placeholder="https://youtube.com/channel/yourprofile" />
        </div>

        <div class="social-field hidden" data-platform="tiktok">
          <label for="tiktokUrl">TikTok URL:</label>
          <input type="url" id="tiktokUrl" name="tiktok" placeholder="https://tiktok.com/@yourprofile" />
        </div>

        <div class="social-field hidden" data-platform="snapchat">
          <label for="snapchatUrl">Snapchat URL:</label>
          <input type="url" id="snapchatUrl" name="snapchat" placeholder="https://snapchat.com/add/yourprofile" />
        </div>

        <div class="social-field hidden" data-platform="threads">
          <label for="threadsUrl">Threads URL:</label>
          <input type="url" id="threadsUrl" name="threads" placeholder="https://threads.net/@yourprofile" />
        </div>
      </div>

      <button type="submit">Generate QR Code</button>
    </form>
  </div>

  <script>
    const checkboxes = document.querySelectorAll('input[name="platform"]');
    const socialFields = document.querySelectorAll('.social-field');

    checkboxes.forEach(box => {
      box.addEventListener('change', () => {
        socialFields.forEach(field => {
          if (field.dataset.platform === box.value) {
            field.classList.toggle('hidden', !box.checked);
            if (!box.checked) {
              field.querySelector('input').value = '';
            }
          }
        });
      });
    });
  </script>
</body>
</html>
